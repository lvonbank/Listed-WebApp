html, body {
  margin: 0;
  padding: 0;
  background: White;
  color: DarkSlateGrey;
  font-family: Tahoma, Verdana, sans-serif;
  font-size: 10pt;
}
div#google{
  float: right;
  padding-right: 15px
}
div#main {
  margin: 0;
  padding: 0 20px 20px;
}
a {
  background: transparent;
  color: maroon;
  text-decoration: underline;
  font-weight: bold;
}
h1 {
  color: maroon;
  font-size: 150%;
  font-style: italic;
  display: block;
  width: 100%;
  border-bottom: 1px solid DarkSlateGrey;
}
h2 {
  text-align: center;
}
h1.title {
  margin: 0 0 1em;
  padding: 10px;
  background-color: red;
  color: white;
  border-bottom: 4px solid maroon;
  font-size: 2em;
  font-style: normal;
}
table#items {
  margin: 10px;
  border-collapse: collapse;
  width: 100%;
  border-bottom: 2px solid black;
}
table#items th {
  border: 2px solid white;
  font-weight: bold;
  background-color: red;
  color: white;
}
table#items th a {
  color: white;
}
table#items th, table#items td {
  padding: 4px;
  text-align: left;
}
#notice #warning {
  background: rosybrown;
  margin: 1em 0;
  padding: 4px;
}
form label {
  display: block;
  line-height: 25px;
  font-weight: bold;
  color: maroon;
}
table#items th.hilite {
  background-color: maroon;
}
div#options{ 
  white-space: nowrap;
  overflow: hidden;
  display: inline-block;
  width: 15%;
  float: left;
}
div#details{ 
  display: inline-block;
  width: 85%;
  float: right;
}
